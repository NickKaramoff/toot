{
	"env": {
		"browser": true
	},
	"extends": ["eslint:recommended", "plugin:unicorn/recommended", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"overrides": [
		{
			"files": ["api/*.js"],
			"env": {
				"node": true,
				"browser": false
			},
			"rules": {
				"unicorn/prefer-node-protocol": 0
			}
		}
	]
}
