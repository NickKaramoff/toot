{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"ignoreDeprecations": "5.0",
		"baseUrl": ".",
		"resolveJsonModule": true,
		"paths": {
			"@components/*": ["src/components/*"],
			"@i18n/*": ["src/i18n/*"],
			"@layouts/*": ["src/layouts/*"],
			"@pages/*": ["src/pages/*"],
			"@scripts/*": ["src/scripts/*"],
			"@stores/*": ["src/stores/*"],
			"@styles/*": ["src/styles/*"]
		}
	}
}
