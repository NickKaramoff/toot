{
	"extends": "astro/tsconfigs/strictest",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@i18n/*": ["src/i18n/*"],
			"@layouts/*": ["src/layouts/*"],
			"@pages/*": ["src/pages/*"],
			"@lib/*": ["src/lib/*"],
			"@stores/*": ["src/stores/*"],
			"@styles/*": ["src/styles/*"]
		}
	}
}
